---
import '../styles/global.css';
import SEOHead from '../components/SEOHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  canonicalUrl?: string;
  ogImage?: string;
  jsonLd?: object;
}

const { title, description, canonicalUrl, ogImage, jsonLd } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <SEOHead
      title={title}
      description={description}
      canonicalUrl={canonicalUrl}
      ogImage={ogImage}
      jsonLd={jsonLd}
    />
  </head>
  <body class="bg-surface-subtle text-surface-foreground">
    <!-- Skip Link -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 bg-brand-yellow text-brand-blue px-4 py-2 rounded-md font-bold ring-2 ring-brand-blue"
    >
      Skip to content
    </a>

    <Header />

    <!-- Main Content -->
    <main id="main-content" class="flex-grow container mx-auto px-4 py-8 max-w-5xl">
      <slot />
    </main>

    <Footer />
  </body>
</html>
