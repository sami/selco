---
import SelcoLayout from '../../layouts/SelcoLayout.astro';
import Disclaimer from '../../components/Disclaimer.astro';
import SelcoSidebar from '../../components/selco/SelcoSidebar.astro';
import CoverageCalculator from '../../components/calculators/CoverageCalculator.tsx';

const BASE_URL = import.meta.env.BASE_URL;
const base = BASE_URL.endsWith('/') ? BASE_URL : `${BASE_URL}/`;

const breadcrumbs = [
  { label: 'Home', href: `${base}` },
  { label: 'Board coverage calculator' }
];

const title = "Board Coverage Calculator - Trade Materials Calculators";
const description = "Work out exactly how many boards (plasterboard, plywood, or backer boards) you need based on the area you have to cover. Fast and accurate calculations for the trades.";
---

<SelcoLayout
  title={title}
  description={description}
  showSidebar={true}
  breadcrumbs={breadcrumbs}
  pageTitle="Board coverage calculator"
>
  <SelcoSidebar />

  <main class="w-full">
    <div class="space-y-12 pb-12">
      
      {/* Header Section */}
      <section class="page-section pt-0 pb-4 max-w-3xl">
        <h1 class="text-3xl md:text-4xl font-extrabold text-primary-dark mb-4">Coverage calculator</h1>
        <p class="text-lg text-text-muted leading-relaxed">
          Work out exactly how many units (packs, sheets, or rolls) you need based on the area you have to cover.
        </p>
      </section>

      {/* Calculator React Island */}
      <section class="w-full">
        <CoverageCalculator client:load />
      </section>

    </div>

    {/* Shared Disclaimer Footer */}
    <div class="mt-16 flex flex-col sm:flex-row gap-4 items-center justify-between p-6 rounded-xl border-2 border-primary-nav bg-gradient-to-br from-primary-nav/5 to-transparent shadow-sm">
      <div class="flex-1 w-full text-left">
        <Disclaimer text="Calculations are estimates only. Always verify values and product coverage before placing orders." />
      </div>
      <a 
        href="https://madebysami.notion.site/2fe361401cd480fc9fcfdf4871d199b1?pvs=105" 
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-6 py-3 rounded-lg bg-primary-nav text-white font-bold text-sm uppercase tracking-wide hover:bg-accent hover:text-primary-dark transition-all duration-300 hover:-translate-y-0.5 shadow-sm hover:shadow-md flex-shrink-0 w-full sm:w-auto text-center"
      >
        Share feedback
      </a>
    </div>
  </main>
</SelcoLayout>
