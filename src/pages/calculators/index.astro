---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="Calculators" description="Browse our collection of trade calculators.">
  <div class="max-w-4xl mx-auto space-y-8">
    <div class="border-b border-muted pb-4">
      <h1 class="text-3xl font-bold text-primary">Calculators</h1>
      <p class="text-muted-foreground mt-2">Select a calculator to get started.</p>
    </div>

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {/* Placeholder for future calculator cards */}
      <div class="p-6 bg-muted/30 rounded-lg border border-dashed border-muted-foreground/30 text-center">
        <p class="text-muted-foreground">More calculators coming soon...</p>
      </div>
    </div>
  </div>
</BaseLayout>
