---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import MasonryCalculator from '../../../components/MasonryCalculator';

const BASE_URL = import.meta.env.BASE_URL;
const base = BASE_URL.endsWith('/') ? BASE_URL : `${BASE_URL}/`;
---

<BaseLayout
  title="Block Calculator | Calculate Concrete Blocks"
  description="Calculate standard 440mm concrete blocks for internal walls, partitions, and cavity inner leaves."
>
  <div class="container mx-auto px-4 pt-6 md:pt-10 pb-16">
    <nav aria-label="Breadcrumb" class="mb-6 text-sm text-muted-foreground">
      <ol class="flex items-center gap-1.5 flex-wrap">
        <li><a href={base} class="hover:text-brand-blue transition-colors">Home</a></li>
        <li class="text-border">/</li>
        <li><a href={`${base}projects/masonry/`} class="hover:text-brand-blue transition-colors">Masonry</a></li>
        <li class="text-border">/</li>
        <li class="text-surface-foreground font-medium">Block Calculator</li>
      </ol>
    </nav>

    <div class="max-w-3xl mx-auto">
      <header class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-surface-foreground mb-4">
          Block Calculator
        </h1>
        <p class="text-lg text-muted-foreground leading-relaxed">
          Estimate the number of concrete blocks needed for blockwork walls. Works for both 100mm and 140mm blocks.
        </p>
      </header>

      <div class="bg-surface rounded-xl border border-border p-1 shadow-sm">
        <MasonryCalculator 
            client:load 
            title="Block Calculator" 
            description="Calculate blocks for internal or external walls."
            defaultWallType="blockwork"
        />
      </div>
      
      <div class="mt-12 prose prose-slate max-w-none text-muted-foreground">
        <h3>Blockwork calculation guide</h3>
        <p>Standard concrete blocks (440mm x 215mm) require <strong>10 blocks per mÂ²</strong>. This figure includes the standard 10mm mortar joint.</p>
      </div>
    </div>
  </div>
</BaseLayout>
