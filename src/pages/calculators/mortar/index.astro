---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import MasonryCalculator from '../../../components/MasonryCalculator';

const BASE_URL = import.meta.env.BASE_URL;
const base = BASE_URL.endsWith('/') ? BASE_URL : `${BASE_URL}/`;
---

<BaseLayout
  title="Mortar Calculator | Cement and Sand Estimator"
  description="Calculate how much cement and sand you need for bricklaying and blockwork. different mix ratios included."
>
  <div class="container mx-auto px-4 pt-6 md:pt-10 pb-16">
    <nav aria-label="Breadcrumb" class="mb-6 text-sm text-muted-foreground">
      <ol class="flex items-center gap-1.5 flex-wrap">
        <li><a href={base} class="hover:text-brand-blue transition-colors">Home</a></li>
        <li class="text-border">/</li>
        <li><a href={`${base}projects/masonry/`} class="hover:text-brand-blue transition-colors">Masonry</a></li>
        <li class="text-border">/</li>
        <li class="text-surface-foreground font-medium">Mortar Calculator</li>
      </ol>
    </nav>

    <div class="max-w-3xl mx-auto">
      <header class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-surface-foreground mb-4">
          Mortar Calculator
        </h1>
        <p class="text-lg text-muted-foreground leading-relaxed">
          Determine the exact amount of cement and sand required for your masonry project. Choose your mix ratio and wall type.
        </p>
      </header>

      <div class="bg-surface rounded-xl border border-border p-1 shadow-sm">
        <MasonryCalculator 
            client:load 
            title="Mortar Calculator" 
            description="Estimate cement and sand for any wall type."
            defaultWallType="cavity"
        />
      </div>

       <div class="mt-12 prose prose-slate max-w-none text-muted-foreground">
        <h3>Common Mix Ratios</h3>
        <ul>
            <li><strong>1:3</strong> - Strong mix (below DPC, retaining walls)</li>
            <li><strong>1:4</strong> - General purpose (most external walls)</li>
            <li><strong>1:5</strong> - Internal walls</li>
            <li><strong>1:6</strong> - Lightweight blockwork</li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>
