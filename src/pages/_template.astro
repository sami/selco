---
import SelcoLayout from '../layouts/SelcoLayout.astro';
import SelcoSidebar from '../components/selco/SelcoSidebar.astro';

const BASE_URL = import.meta.env.BASE_URL;
const base = BASE_URL.endsWith('/') ? BASE_URL : `${BASE_URL}/`;

const breadcrumbs = [
  { label: 'Home', href: base },
  { label: 'Page Title' } // Update this
];

const title = "Page Title";
const description = "Page description for SEO";
---

<SelcoLayout
  title={title}
  description={description}
  showSidebar={true}
  breadcrumbs={breadcrumbs}
>
  <SelcoSidebar />

  <main class="w-full">
    <div class="space-y-12 pb-12">
      <!-- Standard H1 -->
      <h1 class="text-3xl md:text-4xl font-['Arial_Black',sans-serif] text-[#004B8D] uppercase tracking-tight mb-4 mt-6 leading-none">
        {title}
      </h1>

      <div class="min-h-[60vh]">
        <!-- Page Content Goes Here -->
        <p>Start building your page here.</p>
      </div>
    </div>
  </main>
</SelcoLayout>
