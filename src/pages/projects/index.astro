---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout title="My Projects" description="Manage your saved projects and material lists.">
  <div class="max-w-4xl mx-auto space-y-8">
    <div class="border-b border-muted pb-4 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-primary">My Projects</h1>
        <p class="text-muted-foreground mt-2">View and manage your saved estimates.</p>
      </div>
      <button class="bg-primary text-white px-4 py-2 rounded-md font-medium hover:bg-brand-blue/90 focus-ring">
        New Project
      </button>
    </div>

    <div class="p-12 text-center bg-muted/30 rounded-lg border border-dashed border-muted-foreground/30">
      <h3 class="text-lg font-medium text-primary">No projects yet</h3>
      <p class="text-muted-foreground mt-1">Start a new project or use a calculator to save your first estimate.</p>
    </div>
  </div>
</BaseLayout>
