---
import BaseLayout from '../../layouts/BaseLayout.astro';

const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : `${import.meta.env.BASE_URL}/`;
---

<BaseLayout
  title="My Projects | Trade Materials Calculator"
  description="Save and revisit your calculator estimates. Organise materials for each project in one place."
>
  <div class="pt-8 md:pt-12 pb-12">

    {/* Page Header */}
    <div class="space-y-2 mb-10">
      <h1 class="text-2xl md:text-3xl font-bold text-surface-foreground tracking-tight">
        My Projects
      </h1>
      <p class="text-muted-foreground text-base md:text-lg">
        Save calculator results and keep track of what you need.
      </p>
    </div>

    {/* Project Cards */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 mb-16">
      <a
        href={`${base}projects/tiling/`}
        class="group flex flex-col p-5 md:p-6 bg-surface rounded-[--radius-card] border border-border card-shadow hover:border-brand-blue/40 hover:-translate-y-0.5 hover:shadow-md transition-all duration-200 focus-ring"
      >
        <h3 class="font-bold text-surface-foreground group-hover:text-brand-blue transition-colors mb-1">
          Tiling Project
        </h3>
        <p class="text-sm text-muted-foreground leading-relaxed">
          Calculate tiles, adhesive, grout, and spacers in one go.
        </p>
      </a>
    </div>

    {/* Empty State / Coming Soon */}
    <div class="flex flex-col items-center text-center pb-16 border-t border-border pt-12">
      <h2 class="text-lg font-semibold text-surface-foreground mb-1">
        More projects coming soon
      </h2>
      <p class="text-sm text-muted-foreground max-w-sm mb-8">
        We're working on calculators for plumbing, painting, and more.
      </p>

      <a
        href={`${base}calculators/`}
        class="inline-flex items-center gap-2 px-6 py-3 bg-brand-yellow text-brand-blue font-bold text-sm rounded-[--radius-button] shadow-sm hover:brightness-105 active:scale-[0.98] transition-all focus-ring"
      >
        Browse calculators
      </a>
    </div>

    {/* 
      Future state: project cards grid
      ─────────────────────────────────
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5">
        Each card:
        - Project name (user-defined)
        - Date created (e.g. "10 Feb 2026")
        - List of calculators used with Lucide icons
        - "Open" and "Delete" action buttons
      </div>
    */}
  </div>
</BaseLayout>
