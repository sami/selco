---
interface Props {
  text?: string;
}

const { text = "These tools give a helpful estimate only – real jobs can vary, so please double‑check quantities with your own measurements before ordering from your merchant." } = Astro.props;
---

<div class="w-full bg-muted py-4 text-center">
  <p class="text-sm text-muted-foreground italic px-4">
    {text}
  </p>
</div>
